    "tailwind_theme_overrides": {
      "colors": {"primary": "#1e4b64", "primary-dark": "#0d2a36", "secondary": "#c2dbf7", "background": "#f2f2f2", "success": "#10B981", "warning": "#F59E0B", "danger": "#EF4444"},
      "fontFamily": {"sans": ["'IBM Plex Sans'", "'Inter'", "sans-serif"], "heading": ["'Anton'", "Arial", "sans-serif"], "mono": ["'GeistMono'", "'Fira Code'", "monospace"]},
      "borderRadius": {"lg": "1rem", "xl": "1.25rem", "pill": "9999px"},
      "boxShadow": {"card": "0 4px 16px rgba(30, 75, 100, 0.08)", "modal": "0 12px 32px rgba(15, 23, 42, 0.18)"}
